<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shang.dao.UserArticleComment.UserArticleCommentDao">
    <insert id="insertUserArticleComment">
        insert into userarticle_comment(userid,articleid) values(#{userid},#{articleid})
    </insert>
    <delete id="deleteUserArticleComment">
        delete from userarticle_comment where userid=#{userid} and articleid=#{articleid}
    </delete>
</mapper>